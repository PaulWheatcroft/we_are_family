<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>

    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "your.email@internet.com" %>
    </div>
    <div class="mb-3">
     <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>

<% end %>

<div class="mb-3">
<%= link_to "Forgot your password?", password_reset_path, class: "nav-link" %>
</div>
<div class="mb-3">
<%= link_to "Don't have an account? Sign up here", sign_up_path, class: "nav-link" %>
</div>